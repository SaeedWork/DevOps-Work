# Build stage
FROM node:18 AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

# Run stage
FROM node:18-slim
WORKDIR /app
COPY --from=builder /app .
EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s CMD curl --fail http://localhost:3000 || exit 1

CMD ["node", "server.js"]
